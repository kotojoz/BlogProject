<%- include("partials/header.ejs") %>
<main>
    <div class="container">
        <% if(locals.posts.length != 0){ %>
            <% for(let i = 0; i < posts.length; i++){ %>
                <div class="text-left border border-secondary p-3 my-4">
                    <p class="display-6 py-0 my-0 d-inline"><%= posts[i].title %></p>
                    <p class="lead"><strong><%= posts[i].content %></strong></p>
                    <div class="text-end">
                        <!-- Button for PATCH action -->
                        <form action="/update/<%= posts[i].id %>" method="get" class="d-inline">
                            <input type="hidden" name="_method" value="get">
                            <button type="submit" class="btn btn-warning">Update</button>
                        </form>
                        <!-- Button for DELETE action -->
                        <form action="/delete/<%= posts[i].id %>" method="get" class="d-inline">
                            <input type="hidden" name="_method" value="DELETE">
                            <button type="submit" class="btn btn-danger">Delete</button>
                        </form>
                    </div>
                </div>
            <% } %>
        <% } else { %>
            <h1>No one posted yet!</h1>
        <% } %>
    </div>
</main>
<%- include("partials/footer.ejs") %>